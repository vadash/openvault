{
  "name": "openvault",
  "version": "1.23",
  "type": "module",
  "description": "SillyTavern memory extension",
  "scripts": {
    "clear": "node -e \"process.stdout.write('\\u001B[2J\\u001B[0;0f')\"",
    "lint": "eslint .",
    "test": "npm run clear && npm run sync-version && npm run build:css && vitest run",
    "sync-version": "node scripts/sync-version.js",
    "build:css": "node scripts/build-css.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.16"
  }
}
